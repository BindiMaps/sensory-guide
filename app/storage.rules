rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Published guide versions - public read access
    // These files are made public via file.makePublic() in publishGuide function
    // This rule provides explicit public read access as a fallback
    match /venues/{venueId}/versions/{filename} {
      // Public can read published guide JSON files
      allow read: if true;

      // Write only via Cloud Functions
      allow write: if false;
    }

    // Venues folder - for PDF uploads and guide assets (non-versions paths)
    match /venues/{venueId}/{allPaths=**} {
      // Read: Allow authenticated users who are editors
      // Note: Storage rules can't check Firestore data directly,
      // so we rely on Cloud Functions for write operations
      allow read: if request.auth != null;

      // Write: Only via Cloud Functions (signed URLs)
      // Direct writes are denied - uploads go through callable functions
      allow write: if false;
    }

    // Public guide JSON files (slug-based, e.g. public/guides/my-venue.json)
    match /public/guides/{filename} {
      // Anyone can read published guide content
      allow read: if true;

      // Write only via Cloud Functions
      allow write: if false;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
